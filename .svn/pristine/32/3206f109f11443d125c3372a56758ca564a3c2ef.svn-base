<div class="p-h-md p-v bg-white box-shadow pos-rlt">
  <h3 class="no-margin">所有部门</h3>
</div>
<div class="p-md">
  <button ng-repeat="department in data" class="btn btn-icon btn-rounded btn-{{bgs[$index]}} add-department">
    {{department.name}}
  </button>
  <button class="btn btn-icon btn-rounded btn-default add-department">
    <i class="fa fa-plus"></i>
  </button>
</div>
<div class="p-h-md p-v bg-white box-shadow pos-rlt">
  <h3 class="no-margin">你所在的部门</h3>
</div>
<div class="p-md">
  <button class="btn btn-icon btn-rounded btn-info add-department">
    技术部
  </button>
</div>
