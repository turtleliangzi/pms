.department {
    height:100px;
    width:100px;
    text-align:center;
    border-radius:100px;
    /* line-height:100px; */
    padding-top:40px;
    color:#fff;
    font-weight:bold;
    display:inline-block;
    margin-left:20px;
}
.add-department {
    height:100px;
    width:100px;
    border-radius:100px;
    line-height:100px;
    margin-left:20px;
}

.kanban {
    height:100%;
    border-radius:5px;
    background-color:#eee;
    box-shadow: 2px 2px 3px #ddd;
    margin-right:10px;
    width:280px;
    float:left;
    overflow:auto;
}
.kanban-header {
    width:100%;
    height:40px;
    font-size:15px;
    font-weight:700;
    line-height:40px;
    padding-left:10px;


}
.add-task {
    margin-top:10px;
}
.btn-add {
    background-color:#eee;
    border:0px;
}
.btn-add-icon {
    border:1px solid #2772ee;
    margin-right:10px;
    padding-top:5px;
    padding-bottom:5px;
    padding-left:6px;
    padding-right:6px;
}
.task-list {
    background-color:#fff;
    width:100%;
    border-radius:0px;
    padding:8px;
    display:table;
    margin-bottom:5px;
    cursor:pointer;
}
.task-name {
    width:100%;
    font-size:14px;
    color:#000;
    font-weight:bold;
}
.task-sign {
    width:100%;
    padding:0px;
    display:table;
    margin-top:10px;
    margin-bottom:5px;
    list-style-type:circle
}
.task-sign li {
   height:25px;
   line-height:25px;
   background-color:#eee;
   display:block;
   float:left;
   margin-right:5px;
   font-size:12px;
   padding-left:10px;
   padding-right:10px;
   border-radius:2px;
}
.task-default {
    border-left:8px solid #ddd;
}
.task-warning {
    border-left:8px solid #f88311;
}
.task-danger {
    border-left:8px solid #e11144;
}
.task-detail-handler-set {
    display:flex;
    border:1px solid #ddd;
    border-radius:4px;
}
.on-flex {
    flex:0 0 auto;
    max-width:36%;
    min-width:20%;
    width:inherit;
}
.task-detail-handler {
    border-right:1px solid rgba(0, 0, 0, 0.05);
    overflow: hidden;
    position:relative;
    white-space:nowrap;
    width:20%;
}
.task-info-title {
    color:gray;
    line-height;12px;
    margin:16px 16px 0;
}
.task-info-content {
    color:#000;
    line-height:12px;
    margin:16px 16px 10px;
}
.task-desc {
    margin-top:10px;
    padding:10px;
    border:1px solid #ddd;
}
.task-desc-title {
    font-size:14px;
}
.task-desc-content{
    text-indent:2em;
    font-size:12px;
    line-height:15px;
}
.task-detail {
    width:100%;
    display:table;
    padding:5px;
}
.task-executor {
    float:left;
    margin-right:20px;
}
.task-time {
    float:left;
}
.on-flex-doing {
    flex:0 0 auto;
    max-width:50%;
    min-width:50%;
    width:inherit;
    text-align:center;
}
.stepbox {
    height:70px;
    line-height:0;
    padding-left:30px;
    padding-right:30px;
    padding-top:10px;
    position:relative;
    z-index:1;
}
.steptaks {
    background:#ccc none repeat scroll 0 0;
    display:block;
    height:4px;
}
.step_off {
    float:left;
    height:4px;
    position:relative;
    text-align:center;
    display:block;
    width:143px;

}
.steptaks span i {
    display:inline-block;
    height:20px;
    margin-top:-6px;
    color:#fff;
    position:relative;
}
.bg-light {
    background-color:#ccc;
    border:none;
    
}
.steptaks span b {
    color:#999;
    display:inline-block;
    font-weight:400;
    line-height:18px;
    margin-top:10px;
    text-align:center;
    top:35px;
    width:100%;
}
