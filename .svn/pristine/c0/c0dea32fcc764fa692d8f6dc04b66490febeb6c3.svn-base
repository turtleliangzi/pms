.department {
    height:100px;
    width:100px;
    text-align:center;
    border-radius:100px;
    /* line-height:100px; */
    padding-top:40px;
    color:#fff;
    font-weight:bold;
    display:inline-block;
    margin-left:20px;
}
.add-department {
    height:100px;
    width:100px;
    border-radius:100px;
    line-height:100px;
    margin-left:20px;
}

.kanban {
    height:100%;
    border-radius:3px;
    background-color:#eee;
    margin-right:10px;
    width:280px;
    float:left;
    border:1px solid rgba(0, 0, 0, 0.12);
    position:relative;
}
.task-box {
    width:100%;
    height:100%;
    padding-top:40px;
    position:relative;
}
.task-box-list {
    overflow-y:auto;
    overflow-x:visible;
    position:static;
    width:100%;
    height:100%;
    
}
.kanban-header {
    font-size:15px;
    font-weight:bold;
    width:100%;
    height:40px;
    line-height220px;
    padding:10px 30px 9px 15px;
    position:absolute;
    top:0;
    z-index:10;
    color:#000;


}
.add-task {
    margin-top:10px;
    position:absolute;
    bottom:0px;
    width:100%;
    z-index:10;
}
.btn-add {
    background-color:#eee;
    border:0px;
    width:100%;
    padding:4px;
    text-align:left;
}
.btn-add-icon {
    border:1px solid #2772ee;
    margin-right:10px;
    padding-top:5px;
    padding-bottom:5px;
    padding-left:6px;
    padding-right:6px;
}
.task-list {
    background-color:#fff;
    width:100%;
    border-radius:0px;
    padding:8px;
    display:table;
    margin-bottom:5px;
    cursor:pointer;
}
.task-name {
    width:100%;
    font-size:14px;
    color:#000;
    font-weight:bold;
}
.task-sign {
    width:100%;
    padding:0px;
    display:table;
    margin-top:10px;
    margin-bottom:5px;
    list-style-type:circle
}
.task-sign li {
   height:25px;
   line-height:25px;
   background-color:#eee;
   display:block;
   float:left;
   margin-right:5px;
   font-size:12px;
   padding-left:10px;
   padding-right:10px;
   border-radius:2px;
}
.task-default {
    border-left:8px solid #ddd;
}
.task-warning {
    border-left:8px solid #f88311;
}
.task-danger {
    border-left:8px solid #e11144;
}
.task-detail-handler-set {
    display:flex;
    border:1px solid #ddd;
    border-radius:4px;
}
.on-flex {
    flex:0 0 auto;
    max-width:36%;
    min-width:20%;
    width:inherit;
}
.task-detail-handler {
    border-right:1px solid rgba(0, 0, 0, 0.05);
    overflow: hidden;
    position:relative;
    white-space:nowrap;
    width:20%;
}
.task-info-title {
    color:gray;
    line-height;12px;
    margin:16px 16px 0;
}
.task-info-content {
    color:#000;
    line-height:12px;
    margin:16px 16px 10px;
}
.task-desc {
    margin-top:10px;
    padding:10px;
    border:1px solid #ddd;
}
.task-desc-title {
    font-size:14px;
}
.task-desc-content{
    text-indent:2em;
    font-size:12px;
    line-height:15px;
}
.task-detail {
    width:100%;
    display:table;
    padding:5px;
}
.task-executor {
    float:left;
    margin-right:20px;
}
.task-time {
    float:left;
}
.on-flex-doing {
    flex:0 0 auto;
    max-width:50%;
    min-width:50%;
    width:inherit;
    text-align:center;
}
.stepbox {
    margin-top:20px;
    height:70px;
    line-height:0;
    padding-left:30px;
    padding-right:30px;
    padding-top:10px;
    position:relative;
    z-index:1;
}
.steptaks {
    background:#ccc none repeat scroll 0 0;
    display:block;
    height:4px;
    width:100%;
}
.step_off {
    float:left;
    height:4px;
    position:relative;
    text-align:center;
    display:block;
    width:16%;

}
.step_on {
    float:left;
    height:4px;
    position:relative;
    text-align:center;
    display:block;
    width:16%;
    background-color:#57c52c;

}
.icon-off {
    display:inline-block;
    margin-top:-10px;
    position:relative;
    height:25px;
    width:25px;
    border-radius:25px;
    line-height:25px;
    color:#fff;
    font-weight:bold;
    background:#ccc;
}
.icon-on {
    background:#57c52c;
}
.bg-default {
    background-color:#ccc;
    border:none;
    
}
.steptaks span b{
    color:#999;
    display:inline-block;
    font-weight:400;
    line-height:18px;
    margin-top:10px;
    text-align:center;
    top:35px;
    width:100%;
}
.steptaks span p {
    line-height:20px;
}
.project-info {
    width:100%;
    padding:20px;
    display:table;
}
.project-info span {
    line-height:30px;
}
.project-goal {
    width:100%;
    padding-left:20px;
    padding-bottom:20px;
    padding-right:20px;

    display:table;
}
.project-danger {
    width:100%;
    padding-left:20px;
    padding-right:20px;
    padding-bottom:20px;
    display:table;

}
.project-nav {
    width:100%;
    height:40px;
    display:table;
    border:1px solid #fff;
}
.nav-list {
    width:300px;
    height:40px;
    margin:0px auto;
    line-height:40px;
}
.nav-list li {
    list-style:none;
    display:inline-block;
    margin-right:5px;
    height:40px;
    width:60px;
    text-align:center;
}
.nav-list li a{
    font-size:20px;
    color:#000;
    text-decoration:none;
    border:none;
}
.nav-active {
    border-bottom:1px solid #4bb622;
}
.project-file {
    width:100%;
    height:300px;
    display:table;
    background-color:#fff;
    padding:10px;
    border-radius:4px;
}
.project-file .file-header {
    width:100%;
    height:50px;
    border-bottom:1px solid #ddd;
    line-height:50px;
}
.project-file .file-header .file-box {
    float:left;
    margin:0px;
    font-weight:bold;
    height:50px;
    line-height:50px;
}
.project-file .file-header .btn-group {
    float:right;
    font-size:14px;
    line-height:50px;
}
.btn-file {
    background-color:#fff;
    border:0px;
    padding:4px;
    text-align:left;
    height:40px;
    margin-right:5px;
}
