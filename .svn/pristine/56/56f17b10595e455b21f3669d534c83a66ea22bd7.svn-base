<div class="p-h-md p-v bg-white box-shadow pos-rlt">
  <h3 class="no-margin">权限分配</h3>
</div>
<table st-table="rowCollectionBasic" class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>姓名</th>
      <th>邮箱</th>
      <th>手机号</th>
      <th>用户组</th>
      <th>操作</th>
    </tr>
  </thead>
  <tbody>
    <tr ng-repeat="group in memberGroup" st-select-row="row">
      <td>{{group.name}}</td>
      <td>{{group.email}}</td>
      <td>{{group.phone}}</td>
      <td>
        <select class="form-control" ng-model="group_id"  ng-change="selectedGroup(group.group_id)">
          <option ng-repeat="item in groups" value="{{item.id}}" ng-if="item.id == group.group_id" selected >{{item.name}}</option>
          <option ng-repeat="item in groups" value="{{item.id}}" ng-if="item.id != group.group_id"  >{{item.name}}</option>
        </select>
      </td>
      <td>分配</td>
    </tr>
  </tbody>
</table>
